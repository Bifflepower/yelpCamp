<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<div class="container">
    <h1 class="m-3">All Campgrounds</h1>
    <% for (let campground of campgrounds){ %>
        <div class="card mb-3">
            <div class="row pb-2 pt-2">
                <div class="col-md-4">
                    <% if(campground.images.length) { %>
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= campground.images[0].url %>">
                    <% } else { %>
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="https://res.cloudinary.com/dzdejlsud/image/upload/v1715693569/YelpCamp/kd4esacotiijx4ae1k62.png">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %></small>
                        </p>
                        <p class="card-text"><%= campground.description %></p>
                        <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>


<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script crossorigin="anonymous" src="/js/clusterMap.js"></script>